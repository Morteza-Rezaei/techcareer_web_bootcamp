@page
@model techcareer_web_bootcamp.Pages.Books.Index
@{
    ViewData["Title"] = "Index";
}
<h2 class="text-center mb-3">List of Books</h2>

<a href="/Books/Create" class="btn btn-primary mb-3">Add New Book</a>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Book Name</th>
            <th>Author</th>
            <th>Category</th>
            <th>Published Year</th>
            <th>Available</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.BooksList)
        {
            <tr>
                <td>@book.Id</td>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Category</td>
                <td>@book.PublishedYear</td>
                <td>@book.IsAvailable</td>
                <td style="white-space:nowrap">
                    <a href="/Books/Edit?Id=@book.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a href="/Books/Delete?Id=@book.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>